<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body style="background-color:burlywood">

    <!-- Header -->
    <header>
        <h1 style="text-align:center; color:bisque">HI I Resemble IMDB</h1>
    </header>
    <!-- End of Header -->
    <!-- Left Sidebar -->
           @RenderSection("scripts", required: false)
    <nav>
        <h3>Navigation</h3>
        <b>@Html.RouteLink("Movie", new { action = "Index", controller = "Movie", area = "Movie" })</b>
        <b>@Html.RouteLink("Actor", new { action = "Index", controller = "Actor", area = "Actor" })</b>
        <b>@Html.RouteLink("Producer", new { action = "Index", controller = "Producer", area = "Producer" })</b>
        <b>@Html.RouteLink("Poster", new { action = "View", controller = "Image",area="Image", @id = "1" })</b>
    </nav>

    <!-- End of Left Sidebar -->
    <!-- Content Body -->
    <div class="content">
        @RenderBody()
    </div>
    <!-- End of Content Body -->
    <!-- Footer -->
    <div style="bottom:0;position: fixed; width:100%;">
        <hr style="width:100%;" />
        <footer>
            <p>&copy; 2020 ( @DateTime.Now )</p>
        </footer>
    </div>

    <!-- Style -->
    <style>
        header 
        {
            height: 100px;
            width: 100%;
            background-color: black;
        }

        nav 
        {
            float: left;
            width: 180px;
            height: 250px;
            background-color: darkgoldenrod;
        }

        .content 
        {
            background-color: aliceblue;
            padding: 20px;
        }

        footer 
        {
            background-color: green;
            width: 100%;
            height: 50px;
            float: right;
            text-align: center;
        }
    </style>
</body>
</html>